<div class="container" style="margin-top:70px;"></div>
<div class="row mt-5">
    <h3 class="text-center text-uppercase p-2">Lista de Medicamentos</h3>

    <div style="padding: 10px;">
        <button class="btn btn-danger">
            <a class="nav-link link-light" aria-current="page" href="/medi_add">Nuevo Medicamento</a>
        </button>
    </div>

    {{#if medicamento}}
    <div class="table-responsive">
        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col">ID</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Fecha de Fabricación</th>
                    <th scope="col">Fecha de Vencimiento</th>
                    <th scope="col">Presentación</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Precio Unitario</th>
                    <th scope="col">Precio por Presentación</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Especialidad</th>
                    <th scope="col">Tipo de Medicamento</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each medicamento}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{descripcion}}</td>
                    <td>{{fechaFabricacion}}</td>
                    <td>{{fechaVencimiento}}</td>
                    <td>{{presentacion}}</td>
                    <td>{{stock}}</td>
                    <td>{{precioVentaUni}}</td>
                    <td>{{precioVentaPres}}</td>
                    <td>{{marca}}</td>
                    <td>{{especialidad}}</td>
                    <td>{{tipoMedic}}</td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a href="/medi_edit/{{id}}" class="btn btn-warning p-2 me-2">
                                <i class="fa-solid fa-pencil"></i> Actualizar
                            </a>
                            <a href="/medi_delete/{{id}}" class="btn btn-danger p-2">
                                <i class="fa-solid fa-trash"></i> Eliminar
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="12">REGISTRO DE MEDICAMENTOS</td>
                </tr>
            </tfoot>
        </table>
    </div>
    {{else}}
    <div class="card text-center mx-auto" style="width: 350px;">
        <div class="card-header">
            <h3>No hay medicamentos registrados</h3>
        </div>
        <div class="card-body">
            <p>Presiona este botón para registrar un nuevo medicamento en la aplicación</p>
            <a href="/medi_add" class="btn btn-primary">Ir a crear</a>
        </div>
    </div>
    {{/if}}
</div>

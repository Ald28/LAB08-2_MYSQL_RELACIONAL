<div class="container" style="margin-top: 70px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center text-uppercase p-3">Editar Medicamento</h3>

            <form action="/medi_edit/{{medicamento.id}}" method="POST">
                <div class="form-group mb-3">
                    <label for="descripcion" class="form-label">Descripci贸n</label>
                    <input type="text" class="form-control" id="descripcion" name="descripcion" value="{{medicamento.descripcion}}" required>
                </div>
                
                <div class="form-group mb-3">
                    <label for="fechaFabricacion" class="form-label">Fecha de Fabricaci贸n</label>
                    <input type="date" class="form-control" id="fechaFabricacion" name="fechaFabricacion" value="{{medicamento.fechaFabricacion}}" required>
                </div>
                
                <div class="form-group mb-3">
                    <label for="fechaVencimiento" class="form-label">Fecha de Vencimiento</label>
                    <input type="date" class="form-control" id="fechaVencimiento" name="fechaVencimiento" value="{{medicamento.fechaVencimiento}}" required>
                </div>
                
                <div class="form-group mb-3">
                    <label for="presentacion" class="form-label">Presentaci贸n</label>
                    <input type="text" class="form-control" id="presentacion" name="presentacion" value="{{medicamento.presentacion}}" required>
                </div>
                
                <div class="form-group mb-3">
                    <label for="stock" class="form-label">Stock</label>
                    <input type="number" class="form-control" id="stock" name="stock" value="{{medicamento.stock}}" required min="0">
                </div>
                
                <div class="form-group mb-3">
                    <label for="precioVentaUni" class="form-label">Precio Unitario</label>
                    <input type="number" step="0.01" class="form-control" id="precioVentaUni" name="precioVentaUni" value="{{medicamento.precioVentaUni}}" required>
                </div>
                
                <div class="form-group mb-3">
                    <label for="precioVentaPres" class="form-label">Precio por Presentaci贸n</label>
                    <input type="number" step="0.01" class="form-control" id="precioVentaPres" name="precioVentaPres" value="{{medicamento.precioVentaPres}}" required>
                </div>
                
                <div class="form-group mb-3">
                    <label for="marca" class="form-label">Marca</label>
                    <input type="text" class="form-control" id="marca" name="marca" value="{{medicamento.marca}}" required>
                </div>
                
                <div class="form-group mb-3">
                    <label for="especialidad_id" class="form-label">Especialidad</label>
                    <select class="form-control" id="especialidad_id" name="especialidad_id" required>
                        {{#each especialidades}}
                            <option value="{{this.id}}" {{#ifCond this.id "==" ../medicamento.especialidad_id}}selected{{/ifCond}}>{{this.descripcion}}</option>
                        {{/each}}
                    </select>
                </div>
                
                <div class="form-group mb-3">
                    <label for="tipoMedic_id" class="form-label">Tipo de Medicamento</label>
                    <select class="form-control" id="tipoMedic_id" name="tipoMedic_id" required>
                        {{#each tiposMedicamento}}
                            <option value="{{this.id}}" {{#ifCond this.id "==" ../medicamento.tipoMedic_id}}selected{{/ifCond}}>{{this.descripcion}}</option>
                        {{/each}}
                    </select>
                </div>
                
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Actualizar Medicamento</button>
                    <a href="/medi_list" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

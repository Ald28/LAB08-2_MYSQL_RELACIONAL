<div class="container" style="margin-top: 70px;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-center text-uppercase p-3">Agregar Nueva Especialidad</h3>

            <form action="/espe_add" method="POST">
                <div class="form-group mb-3">
                    <label for="descripcion" class="form-label">Descripción de la Especialidad</label>
                    <input type="text" class="form-control" id="descripcion" name="descripcion" placeholder="Ingrese la descripción de la especialidad" required>
                </div>
                
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Agregar Especialidad</button>
                    <a href="/espe_list" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
